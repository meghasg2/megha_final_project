<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dress_up_chuchu"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:lineSpacingExtra="8sp"
            android:paddingLeft="50sp"
            android:paddingTop="65sp"
            android:text="Dress up Chuchu!"
            android:textSize="50sp"
            app:fontFamily="cursive" />

        <TextView
            android:id="@+id/chu_choose_an_object"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:paddingLeft="45sp"
            android:paddingTop="50sp"
            android:text="CHU-CHOOSE AN OUTFIT!"
            android:textSize="27sp"
            app:fontFamily="sans-serif" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            app:srcCompat="@drawable/chuchuuuu" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START" />

    </LinearLayout>
</LinearLayout>
